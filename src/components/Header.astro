---
import Logo from './ui/Logo.astro';
import Button from './ui/Button.astro';
---
<header class="bg-white py-4 shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <nav class="flex justify-between items-center">
      <Logo size="md" />
      <div class="hidden md:flex items-center gap-8">
        <a href="#creators" class="text-gray-600 hover:text-purple-600 font-medium">For Creators</a>
        <a href="#brands" class="text-gray-600 hover:text-purple-600 font-medium">For Brands</a>
        <a href="#success-stories" class="text-gray-600 hover:text-purple-600 font-medium">Success Stories</a>
        <Button variant="primary" size="md">
          Join Now
        </Button>
      </div>
      <button class="md:hidden text-gray-600 hover:text-purple-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>
</header>