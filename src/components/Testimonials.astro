---
interface Testimonial {
  name: string;
  role: string;
  content: string;
  image: string;
  userType: 'creator' | 'brand';
}

const testimonials: Testimonial[] = [
  {
    name: "Alex Rivera",
    role: "Travel & Lifestyle Creator",
    content: "CreatorLabs has transformed how I work with brands. The platform makes it easy to find partnerships that align with my content and values.",
    image: "/creator1.jpg",
    userType: 'creator'
  },
  {
    name: "Sarah Chen",
    role: "Marketing Director at TechBrand",
    content: "We've found amazing creators who truly understand our brand voice. The campaign management tools save us countless hours.",
    image: "/brand1.jpg",
    userType: 'brand'
  }
];
---
<section id="success-stories" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Success Stories</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-8 rounded-lg shadow-md">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-gray-200 mr-4"></div>
            <div>
              <div class="font-semibold">{testimonial.name}</div>
              <div class="text-purple-600">{testimonial.role}</div>
            </div>
          </div>
          <p class="text-gray-600">{testimonial.content}</p>
          <div class="mt-4 text-sm text-gray-500">
            {testimonial.userType === 'creator' ? 'üé• Creator' : 'üè¢ Brand Partner'}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>