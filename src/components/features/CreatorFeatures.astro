---
import Card from '../ui/Card.astro';
import { FaHandshake, FaCalendarAlt, FaChartLine, FaFileContract } from 'react-icons/fa';

const features = [
  {
    title: "Smart Matching",
    description: "Our AI-powered system matches you with brands that align with your content style and audience demographics.",
    Icon: FaHandshake
  },
  {
    title: "Content Calendar",
    description: "Plan and schedule your brand collaborations with our intuitive content calendar.",
    Icon: FaCalendarAlt
  },
  {
    title: "Analytics Dashboard",
    description: "Track your performance, earnings, and audience engagement all in one place.",
    Icon: FaChartLine
  },
  {
    title: "Contract Management",
    description: "Easily manage agreements and deliverables with built-in contract tools.",
    Icon: FaFileContract
  }
];
---
<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-bold mb-6">Tools Built for Creators</h2>
      <p class="text-xl text-gray-600">Everything you need to manage and grow your creator business.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {features.map(feature => (
        <Card>
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <feature.Icon className="w-6 h-6 text-purple-600" />
              </div>
            </div>
            <div>
              <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>