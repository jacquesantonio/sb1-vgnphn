---
const stats = [
  {
    number: "50K+",
    label: "Active Creators",
    description: "Join our growing community"
  },
  {
    number: "1000+",
    label: "Brand Partners",
    description: "Leading companies trust us"
  },
  {
    number: "$100M+",
    label: "Creator Earnings",
    description: "Paid out to creators"
  },
  {
    number: "95%",
    label: "Success Rate",
    description: "Successful partnerships"
  }
];
---
<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-12">
      {stats.map(stat => (
        <div class="text-center">
          <div class="text-5xl font-bold text-purple-600 mb-2">{stat.number}</div>
          <div class="text-xl font-semibold text-gray-800 mb-1">{stat.label}</div>
          <div class="text-gray-500">{stat.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>